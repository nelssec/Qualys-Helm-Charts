{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "hostNetwork": {
            "type": "boolean"
        },
        "hostProc": {
            "type": "boolean"
        },
        "enableDebugPolicy": {
            "type": "boolean"
        },
        "image": {
            "type": "string"
        },
        "imagePullPolicy": {
            "type": "string"
        },
        "ignoreProcess": {
            "type": "string"
        },	    
        "processAllowList": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "value": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "logConfig": {
            "type": "object",
            "properties": {
                "logFileSize": {
                    "type": "integer"
                },
                "logLevel": {
                    "type": "string"
                },
                "logPurgeCount": {
                    "type": "integer"
                }
            },
            "additionalProperties": false
        },
        "persistentStorage": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "hostPath": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "resources": {
            "type": "object",
            "properties": {
                "limits": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                },
                "requests": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                }
            },
            "additionalProperties": false
        },
        "tolerations": {
            "type": ["array", "null"],
            "items": {
                "type": "object",
                "properties": {
                    "key": {
                        "type": "string"
                    },
                    "operator": {
                        "type": "string",
                        "enum": ["Exists","Equal"]
                    },
                    "value": {
                        "type": "string"
                    },
                    "effect": {
                        "type": "string",
                        "enum": ["NoSchedule","PreferNoSchedule","NoExecute"]
                    }
                },
                "required": ["key","operator"],
                "additionalProperties": false
            }
        },
        "nodeSelector": {
            "type": ["object","null"],
            "additionalProperties": {
                "type": "string"
            }
        },
        "affinity": {
            "type": ["object","null"],
            "properties": {
                "nodeAffinity": {
                    "type": ["object","null"]
                },
                "podAffinity": {
                    "type": ["object","null"]
                },
                "podAntiAffinity": {
                    "type": ["object","null"]
                }
            }
        },
        "global": {
            "type": "object",
            "additionalProperties": true
        },
        "common": {
            "type": "object",
            "additionalProperties": true
        },
        "enabled": {
            "type": "boolean",
            "additionalProperties": true
        }
    },
    "additionalProperties": false
}
