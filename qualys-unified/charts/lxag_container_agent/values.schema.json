{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "containerd": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" }
      }
    },
    "crio": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" }
      }
    },
    "docker": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "tlsVerify": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "certPath": { "type": ["string", "null"] }
          }
        }
      }
    },
    "openshift": { "type": "boolean" },
    "qualys": {
      "type": "object",
      "properties": {
        "namespace": { "type": ["string", "null"] },
        "image": {
          "type": "object",
          "properties": {
            "repository": { "type": ["string", "null"] },
            "tag": { "type": ["string", "null"] },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"]
            }
          }
        },
        "resources": {
          "type": "object",
          "properties": {
            "limits": {
              "type": "object",
              "properties": {
                "cpu": { "type": "string", "pattern": "^[0-9.]+$" }
              }
            }
          }
        },
        "args": {
          "type": "object",
          "properties": {
            "activationId": {
              "type": "string",
              "minLength": 1
            },
            "customerId": {
              "type": "string",
              "minLength": 1
            },
            "providerName": {
              "type": "string",
              "enum": ["AWS", "GCP", "COREOS"],
              "errorMessage": "Invalid providerName. Supported values are: AWS, GCP, COREOS.",
              "minLength": 1
            },
            "logLevel": {
              "type": ["string", "null"]
            },
            "serverUri": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": ["activationId", "customerId", "providerName", "serverUri"]
        },
        "hostNetwork": { "type": "boolean" },
        "hostIPC": { "type": "boolean" },
        "hostPID": { "type": "boolean" }
      }
    }
  }
}
